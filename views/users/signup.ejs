<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup on WanderLust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">UserName</span>
                    <input type="text" name="username" class="form-control" placeholder="Enter UserName"
                        aria-label="title" aria-describedby="basic-addon1" id="username" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Email</span>
                    <input type="email" name="email" class="form-control" placeholder="Enter Email" aria-label="title"
                        aria-describedby="basic-addon1" id="email" required>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Password</span>
                    <input type="password" name="password" class="form-control" placeholder="Enter Password" aria-label="title"
                        aria-describedby="basic-addon1" id="password" required>
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            Show
                        </button>
                </div>
                <button type="submit" class="btn btn-outline-info">SignUp</button>
            </form>
        </div>
    </div>